<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.addidas.project.crmqpp.Dao.ProductDao">

	<!-- 以下方法将作为学习使用的通用的实现方法 -->
	<!-- 新增一条记录 -->
	<insert id="save" parameterType="ProductBean" keyProperty="id"
		useGeneratedKeys="true">
		insert into
		t_product(name,price)
		values
		(#{name},#{price})
	</insert>
	<!-- 修改一条记录  update t_product set name="bruce",price=500.00 where id=1;
		<update id="update" parameterType="ProductBean" keyProperty="id"
		useGeneratedKeys="true">
		update t_product set 
		name = #{name},
		price = #{price} where id = (#{id});
	</update>
	
	
	
	 -->
	
	
	
	
</mapper> 